                </div>
              </div>
            </form>
         </div>
          <a class="item" href ="/home/twitter">커뮤니티</a>
            <% if user_signed_in? %>
               <div class="ui dropdown item">
                 <%= current_user.email %>
               </div>
               <div class="ui dropdown item">
                 <a class="item"><%= link_to "로그아웃", destroy_user_session_path, :method => :get, data: { confirm: "확실하세요?" } %></a>
               </div>
            <% else %>
             <a class="item" href ="/users/sign_in">로그인</a>
             <a class="item" href ="/users/sign_up">회원가입</a>
            <% end %>
     </div>
  </div>


    <div class = "container" style=" margin-top: 100px;">
       <form action="/home/update/<%= @one_post.id %>" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <!-- 제목 -->
            <img src="/assets/title_im.png" style = "height:50px;" />
            <input type="text" class="form-control" name="title" placeholder="제목을 입력해주세요" value="<%= @one_post.title %>">
          </div>
          <br>
            <!-- 내용 -->
            <img src="/assets/text_img.png" style = "height:50px;" />
            <textarea class="form-control tinymce" rows="30" placeholder="내용을 입력해주세요" name="content"><%= @one_post.content.html_safe %></textarea>
            <input type="file" name="pic" accept="image/*" title="가가"></input>
          <br>
          
          
          <div align="center">
            <button type="submit"  style="border: 0; background: transparent" class="btn btn-default" > <img src="/assets/write_button" style="width:100px"  alt="submit" id="write_button" /></button>
          </div>
      </form>

