<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://malsup.github.io/jquery.cycle2.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css">
    <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.3/css/bootstrap.min.css" integrity="sha384-MIwDKRSSImVFAZCVLtU0LMDdON6KVCrZHyVQQj6e8wIEJkW4tvwqXrbMIya1vriY" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    


</head>

<body>
    <div class="menu-top">	
        <div class="container clearfix">
            <div id="logo" class="fleft">
                <a class="navbar-brand" href="/"><img src="/assets/title_text2.png"  width="270" height="30"></a>
            </div>
            
            
            <div id="nav" class="fright">
                 <form action="/home/search" method="GET" class="search">
                    <div class="field">
                      <input type="text" class="input-search" id="input-search" name="search" required>
                      <label for="input-search">검색하기ffff</label>
                    </div> <!-- /field -->
                  </form>
            </div>
            
            <div id="nav" class="fright">
                <ul class="nav nav-pills pull-right">
                    <li><a href ="/home/twitter"> 커뮤니티 </a></li>
                  <% if user_signed_in? %>
                    <li><%= current_user.email %><%= link_to "로그아웃", destroy_user_session_path, :method => :get %></li>
                  <% else %>
                    <li><%= link_to "로그인", new_user_session_path %></li>
                    <li><%= link_to "회원가입", new_user_registration_path %></li>
                  <% end %>
                </ul>
                <div class="clear"></div>
            </div>
        </div>
    </div>
 
  <!-- 게시판 글 보는 곳 -->
    
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6" style="padding-top: 150px;" >
            <h1 style="font-weight:bold; text-align:left"><%= @every_post.title %></h1>
                <p style = "text-align:left">edit <%= @every_post.user.name %> | <%= @every_post.created_at.strftime("%h.%m.%Y") %></p>
                    <% if user_signed_in? && @every_post.user == current_user %>
                        <form action="/home/destroy/<%= @every_post.id %>" method="post" style="float: right;">
                            <button type="submit" class="btn btn-outline-secondary">삭제</button>
                        </form>
                        <form action="/home/update_view/<%= @every_post.id %>" method="post"style="float: right;" >
                            <button type="submit" class="btn btn-outline-secondary">수정</button>
                        </form>
                    <% end %>
                    <hr>
            <div style="height:300px;">
                   <!-- 이미지 -->

                <%= @every_post.content.html_safe %>
                
            </div>

                <hr>
    <!-- 좋아요 -->
               
             <% if user_signed_in? && @every_post.post_likes.where(writing_id: @every_post.id, user_id: current_user.id).blank? %>
                 <a href="/home/post_like/<%=@every_post.id%>">좋아요</a>
             <% elsif user_signed_in? %>
                 <a href="/home/post_like/<%=@every_post.id%>">좋아요 취소</a>
             <% end %>
                  좋아요 갯수 <%= @every_post.post_likes.all.count %>
                
        
        
        
           <!-- 댓글 되는 곳 -->
            
                 <label for="exampleInputEmail1">댓글(<%= @every_post.replies.count %>)</label><hr>
                    <% @every_post.replies.each do |r| %>
                        <ul class="demo-list-three mdl-list">
                          <li class="mdl-list__item mdl-list__item--three-line">
                            <span class="mdl-list__item-primary-content">
                              <i class="material-icons mdl-list__item-avatar">person</i>
                              <% if user_signed_in? && r.user == current_user %>
                              <form action="/home/reply_destroy/<%= r.id %>" method="post" style="float: right;">
                                    <button type="submit" class="btn btn-outline-secondary">삭제</button>
                              </form>
                              <form action="/home/reply_updateview/<%= r.id %>" method="post" style="float: right;">
                                    <button type="submit" class="btn btn-outline-secondary delete">수정</button>
                              </form>
                            <% end %>
                              <span> <%= r.user.email%></span>
                              <span class="mdl-list__item-text-body">
                                <%= r.content %>
                              </span>
                            </span>
                          </li>
                        </ul>
                        <hr>
                    <% end %>
                <form action= "/home/reply_write" style="margin-top:4px;" method='POST'>
                    <input type="hidden" value="<%= @every_post.id%>" name="id_of_post">
                    <textarea name="content" class="form-control" rows="1" id="commit" placeholder="댓글을 남겨주세요"></textarea>
                    <button type="submit" class="btn btn-default" style="margin-top:30px">전송</button>
                </form><br>
        </div>
        <div class="col-md-3"></div>
    </div>



  <div id="footer">
            <div class="container clearfix">
                <div class="copyright">Travel the World &copy; 2020 | <a href="javascript:void(0);">Privacy Policy</a></div>
                
            </div>
        </div>
 </form>
</html>




